<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            tools:context=".ui.patient.patient_profile">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/bac"

                />


            <ImageView
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/patient"


                />

            <TextView
                android:id="@+id/patientName_PatientProfile"
                android:layout_width="283dp"
                android:layout_height="45dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/hints"
                android:hint="name"
                android:paddingLeft="25dp"
                android:paddingTop="8dp"
                android:paddingRight="25dp"
                android:textColor="#878888"
                android:textSize="18dp"

                />

            <TextView
                android:id="@+id/patientPhone_PatientProfile"
                android:layout_width="283dp"
                android:layout_height="45dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/hints"
                android:hint="phone "
                android:paddingLeft="25dp"
                android:paddingTop="8dp"
                android:textColor="#878888"
                android:textSize="18dp"

                />

            <TextView
                android:id="@+id/patientAge_PatientProfile"
                android:layout_width="283dp"
                android:layout_height="45dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/hints"
                android:hint="age"
                android:numeric="decimal"
                android:paddingLeft="25dp"
                android:paddingTop="8dp"
                android:paddingRight="25dp"
                android:textColor="#878888"
                android:textSize="18dp"


                />

            <TextView
                android:id="@+id/patientAddress_PatientProfile"
                android:layout_width="283dp"
                android:layout_height="45dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/hints"
                android:hint="address"
                android:paddingLeft="25dp"
                android:paddingTop="8dp"
                android:paddingRight="25dp"
                android:textColor="#878888"
                android:textSize="18dp"


                />

            <TextView
                android:id="@+id/patientStatus_PatientProfile"
                android:layout_width="283dp"
                android:layout_height="45dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/hints"
                android:hint="status"
                android:paddingLeft="25dp"
                android:paddingTop="8dp"
                android:paddingRight="25dp"
                android:textColor="#878888"
                android:textSize="18dp"


                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/patientX_rayOrAnalysis_PatientProfile"
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/hints"
                    android:hint="x-ray or analysis"
                    android:paddingLeft="25dp"
                    android:paddingTop="8dp"
                    android:paddingRight="80dp"
                    android:scrollbarSize="200dp"
                    android:textColor="#878888"
                    android:textSize="18dp"

                    />


            </FrameLayout>


            <TextView
                android:id="@+id/patientSelectDate_PatientProfile"
                android:layout_width="283dp"
                android:layout_height="45dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/hints"
                android:hint="select date"
                android:paddingLeft="25dp"
                android:paddingTop="8dp"
                android:paddingRight="25dp"
                android:textColor="#878888"
                android:textSize="18dp"

                />
        </LinearLayout>
    </ScrollView>
</layout>