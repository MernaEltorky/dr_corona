<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.outmenue.patient_profile">

    <ImageView
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:src="@drawable/bac"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"

        />


    <ImageView
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/patient"
        android:layout_marginTop="40dp"


        />

    <EditText
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:hint="name"
        android:textSize="18dp"
        android:textColor="#878888"
        android:background="@drawable/hints"

        />
    <EditText
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="25dp"
        android:hint="phone or e-mail"
        android:textSize="18dp"
        android:textColor="#878888"
        android:background="@drawable/hints"

        />

    <EditText
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:hint="age"
        android:numeric="decimal"
        android:textSize="18dp"
        android:textColor="#878888"
        android:background="@drawable/hints"

        />
    <EditText
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:hint="address"
        android:textSize="18dp"
        android:textColor="#878888"
        android:background="@drawable/hints"

        />

    <EditText
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:hint="status"
        android:textSize="18dp"
        android:textColor="#878888"
        android:background="@drawable/hints"

        />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <EditText
            android:layout_width="283dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="80dp"
            android:hint="x-ray or analysis"
            android:textSize="18dp"
            android:scrollbarSize="200dp"
            android:textColor="#878888"
            android:background="@drawable/hints"

            />

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="260dp"
            android:background="@drawable/button"
            android:layout_marginTop="15dp"
            android:text="upload"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="italic"

            />

    </FrameLayout>


    <EditText
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:id="@+id/et_date"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:hint="select date"
        android:textSize="18dp"
        android:textColor="#878888"
        android:background="@drawable/hints"

        />














</LinearLayout>